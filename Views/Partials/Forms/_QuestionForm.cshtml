@using Onatrix_Umbraco.ViewModels
@model QuestionFormViewModel

@using (Html.BeginUmbracoForm("HandleQuestionForm", "Form", FormMethod.Post, new { noValidate = "novalidate", id = "questionForm" }))
{
    <div class="flex flex-col gap-5">
        <div class="flex justify-between gap-8 w-full">
            <div class="w-full">
                <label asp-for="Name" class="sr-only"></label>
                <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(x => x.Name)" class="w-full p-3 italic border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="w-full">
                <label asp-for="Email" class="sr-only"></label>
                <input asp-for="Email" type="text" placeholder="@Html.DisplayNameFor(x => x.Email)" class="w-full p-3 italic border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
      

        <div class="min-h-150px">
            <label asp-for="Question" class="sr-only"></label>
            <textarea asp-for="Question" type="text" placeholder="@Html.DisplayNameFor(x => x.Question)" class="w-full p-3 italic border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none min-h-[150px] resize-none">
          </textarea>
            <span asp-validation-for="Question"></span>
        </div>
        
        <div>
            <button class="btn primary-btn" type="submit">Submit</button>
        </div>
    </div>
}