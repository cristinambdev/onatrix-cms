@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Onatrix_Umbraco.ViewModels
@{
    var content = (ContentModels.AboutCallbackSection)Model.Content;
    var settings = Model.Settings as ContentModels.AboutCallbackSettings;

}

<section class="py-[4rem]">
    <div class="max-w-7xl mx-auto px-4 flex gap-10">

        <div class="flex flex-col w-7/12">
            <div class="rte aboutUs">
                @Html.Raw(content.AboutCallbackSectionBody)
            </div>
        </div>
        
       

        <div class="flex flex-col w-5/12 shadow-md -mt-[8rem] z-99">
            <div class="bg-primary">
                <p class="text-white py-[1.5rem] px-[2rem] text-[1.875rem] font-bold">@content.FormTitle</p>

            </div>

            <p class="text-sm bg-neutral py-[1.5rem] px-[2rem] italic">@content.AboutCallbackFormDescription</p>
            <partial name="Partials/Forms/_CallbackForm" model="new CallbackFormViewModel()"/>

        </div>
    </div>

</section>