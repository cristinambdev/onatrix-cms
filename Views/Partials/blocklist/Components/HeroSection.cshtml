@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.HeroSection)Model.Content;
}

<section class="relative py-[7rem]">

	<div class="absolute inset-0">
		@if (@content.HeroBgImage != null)
		{
			<img src="@content.HeroBgImage.Url()" class="hidden md:block  md:h-full md:object-cover" />
		}

	</div>

	<div class="max-w-7xl mx-auto px-4 relative z-10">
		<div class="md:w-5/10 flex flex-col gap-8">
			<h1 class="leading-none">@content.HeroTitle</h1>
			<div class="rte">@Html.Raw(content.HeroText)</div>
			@if (content.HeroLink != null)
			{
				<a class="primary-btn btn self-start" href="@content.HeroLink.Url">@content.HeroLink.Name</a>
			}
		</div>

	</div>

</section>