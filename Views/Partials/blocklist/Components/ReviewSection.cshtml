@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.ReviewSection)Model.Content;

}


<section class="bg-white-100 lg:relative">
    <div class="max-w-7xl mx-auto flex flex-col lg:flex-row items-center items-center md:items-stretch px-4 lg:px-8 gap-8">

    

        <div class="flex flex-col items-left w-full lg:w-6/15 px-4 py-16 order-2 lg:order-1">
            <h2 class="label text-left">@content?.ReviewSectionLabel</h2>
            <div class="leading-none text-left mb-6">@Html.Raw(content?.ReviewSectionTitle)</div>

            @if (@content?.ReviewSectionImage != null)
            {
                <div class="w-full lg:hidden inset-y-0 right-0 mb-5">
                    <img src="@content?.ReviewSectionImage.Url()" alt="Review Section Image" class="h-full w-full object-cover" />
                </div>
            }


            <div class="rte">@Html.Raw(content?.ReviewSectionText)</div>
            <div>@Html.Raw(content?.ReviewSectionSignature)</div>
        </div>

        @if (@content?.ReviewSectionImage != null)
        {
            <div class="hidden lg:block lg:absolute lg:w-7/15 inset-y-0 right-0 order-1 lg:order-2">
                <img src="@content?.ReviewSectionImage.Url()" alt="Review Section Image" class="h-full w-full object-cover" />
            </div>
        }
            
    </div>

</section>