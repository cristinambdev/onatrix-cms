@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.SuccessStoriesSection)Model.Content;

}

<section class="bg-primary bg-no-repeat py-16 relative h-[850px]"
         style="background-image: url('/images/dot_map.svg');
                background-position: center;
                background-repeat: no-repeat;">
    <div class="max-w-7xl mx-auto px-4 relative flex flex-col items-center">

        <div class="flex flex-col gap-3 items-center text-center">
           
           <h2 class="label">@content.SuccessStoriesSectionLabel</h2>

            
           <div class="rte">@Html.Raw(content.SuccessStoriesSectionTitle)</div>

            <div class="flex flex-col md:flex-row justify-center items-start text-center gap-8 mt-4">
               <span class="w-90">@Html.Raw(content.SuccessStoriesSectionCustomers)</span>
                <span class="w-90">@Html.Raw(content.SuccessStoriesSectionProjects)</span>
                <span class="w-90">@Html.Raw(content.SuccessStoriesSectionBranches)</span>
           </div>

        @if (@content?.SuccessStoriesSectionImage != null)
        {
            <div class="hidden md:flex justify-center mt-2 absolute top-80">
                <img src="@content?.SuccessStoriesSectionImage.Url()" class="mt-5 " />
            </div>
        }

        </div>

        </div>
</section>